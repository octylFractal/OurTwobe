{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "es2020",
        "esModuleInterop": true,
        "target": "esnext",
        "jsx": "preserve",
        "verbatimModuleSyntax": true,
        "allowJs": false,
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./typings"
        ],
        "lib": [
            "ES5",
            "ES6",
            "ES2021",
            "DOM",
            "ScriptHost"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "./build"
    ]
}
