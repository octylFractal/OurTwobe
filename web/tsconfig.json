{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "es2020",
        "target": "esnext",
        "jsx": "preserve",
        "importsNotUsedAsValues": "preserve",
        "allowJs": false,
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./typings"
        ],
        "lib": [
            "es6",
            "es5",
            "es2017",
            "es2018",
            "dom",
            "scripthost"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "./build"
    ]
}
